<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="162dp"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/iv_header_nav_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/Coin_Ranking"
        android:src="@drawable/ic_coinranking"
        app:layout_constraintBottom_toTopOf="@+id/tv_header_nav_drawer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_header_nav_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Coin_Ranking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_header_nav_drawer" />


</androidx.constraintlayout.widget.ConstraintLayout>